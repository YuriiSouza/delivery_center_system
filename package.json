{
  "name": "whatsapp-automation-app",
  "version": "1.0.0",
  "description": "Aplicativo de automação WhatsApp com integração Google Sheets",
  "main": "src/main/main.js",
  "author": "Sua Empresa",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:react": "vite",
    "build:react": "vite build",
    "build": "npm run build:react && electron-builder",
    "build:win": "npm run build:react && electron-builder --win",
    "build:mac": "npm run build:react && electron-builder --mac",
    "build:linux": "npm run build:react && electron-builder --linux",
    "publish": "npm run build:react && electron-builder --publish always"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "googleapis": "^128.0.0",
    "gspread": "^1.0.0",
    "selenium-webdriver": "^4.15.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.empresa.whatsapp-automation",
    "productName": "WhatsApp Automation",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/main/**/*",
      "dist-react/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "credenciais.json",
        "to": "credenciais.json",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Sua Empresa"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "seu-usuario",
        "repo": "whatsapp-automation-app",
        "private": false
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
